<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task1_1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task1_1"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task1_2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task1_2"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task1_3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task1_3"
            android:textSize="@dimen/text_size" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/task1_4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task1_4"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task2_1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task2_1"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task2_2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task2_2"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/task2_3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/big_indent"
            android:text="@string/task2_3"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</ScrollView>